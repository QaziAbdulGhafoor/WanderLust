<% layout("../layouts/boilerplate") %>
<body>
  <div class="row col-10 offset-2 mt-4 mb-2">
    <h2><%=listing.title%></h2>
  </div>

  <div class="row">
    <div class="col-8 offset-2">
      <div class="card col-10 listing-card">
        <img
          src="<%=listing.image%>"
          class="card-img-top myimg"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text mt-2"><%=listing.description%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item li-det">Price: <%=listing.price%></li>
          <li class="list-group-item li-det">
            Location: <%=listing.location%>
          </li>
          <li class="list-group-item li-det">Country: <%=listing.country%></li>
        </ul>
        <div class="card-body btn-holder">
          <a
            href="/listings/<%=listing._id%>/edit"
            class="card-link btn btn-dark add-btn"
            >Edit</a
          >
          <form action="/listings/<%=listing.id%>?_method=DELETE" method="post">
            <button class="card-link btn btn-dark del">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class="reviews col-8 offset-2">
    <h1>Leave a Review</h1>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="ratings">
        <label for="ratings" class="form-label">Ratings:</label>
        <input
          type="range"
          min="1"
          max="5"
          id="ratings"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="comment">
        <label for="comment" class="form-label">Comments:</label>
        <textarea
          name="review[comment]"
          id="comment"
          rows="5"
          cols="20"
          class="form-control mb-3"
          required
        ></textarea>
        <div class="invalid-feedback">Comment required!</div>
      </div>
      <button class="btn btn-dark mb-2">Submit</button>
    </form>
    <h4>All Reviews</h4>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 mb-2 ms-2">
        <div class="card-body">
          <h4 class="card-title">Qazi</h4>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %></p>
        </div>
        <form
          action="/listings/<%= listing.id %>/reviews/<%=review._id%>?_method=DELETE"
          method="post"
          class="mb-2"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</body>
