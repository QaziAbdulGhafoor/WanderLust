<% layout("../layouts/boilerplate") %>
<body>
  <br />
  <div class="row">
    <div class="col col-8 offset-2">
      <h1>Add a new Listing</h1>
      <br />
      <form
        action="/listings"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title of Place:</label>
          <input
            type="text"
            id="title"
            placeholder="Enter a good title"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
          <div class="invalid-feedback">Title is required!</div>
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label"
            >Describe what you provide:</label
          >
          <textarea
            type="text"
            id="desc"
            placeholder="Give brief description to express all your listing"
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description is required!</div>
        </div>
        <div class="mb-3">
          <label for="img" class="form-label"
            >Provide a valid image link:</label
          >
          <input
            type="text"
            id="img"
            placeholder="paste image link here"
            name="listing[image]"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input
              type="text"
              id="price"
              placeholder="1200"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price is required!</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input
              type="text"
              id="country"
              placeholder="Pakistan"
              name="listing[country]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country is required!</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location:</label>
          <input
            type="text"
            id="location"
            placeholder="Karachi , Sindh"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is required!</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">Submit</button><br />
      </form>
    </div>
  </div>
</body>
